<link rel="stylesheet" href="css/clientes.css">
<link rel="stylesheet" href="css/voz.css">
<script type="text/javascript" src="scripts/voz.js"></script>
<br><h1 align="center">Experiencias</h1><br>

<div align="center">
  <div class="container">
    <div class="row">
      <% @experiencias.each do |experiencia| %>
      <div class="col-sm-4">
        <div><a target="_blank"><img class="imagen1" src="<%=experiencia.foto_exp%>"></a></div>
        <br>
        <b>Fecha:</b>
        <%= Time.at(experiencia.created_at).to_date %>
        <br>
        <br>
        <b>Autor:</b>
        <%=Person.find_by(id: experiencia.person_id).nombre %>
        <br>
        <br>
        <b>Relato:</b>
        <%= (experiencia.comentario).slice(0,15) + "..." %>
        <br>
        <br>
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#leerMas<%= experiencia.id%>">Leer más</button><br><br>
      </div>
      <% end %>
    </div>
  </div>
</div>

<br><div style="padding-left: 45%;" class="boton">
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal">Nueva experiencia</button></div>

<!-- Modal Nueva experiencia -->
<div class="modal fade" id="myModal" role="dialog">
  <div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Nueva experiencia</h4>
      </div>
      
      <%= render "exp" %>
      
    </div>
  </div>
</div>

<!-- Modal Leer más -->
<% @experienciasm.each do |experiencia| %>
<div class="modal fade" id="leerMas<%= experiencia.id%>" role="dialog">
  <div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Experiencia</h4>
      </div>
      <div class="modal-body">
       <div><a target="_blank"><img class="imgmodal" src="<%=experiencia.foto_exp%>"></a></div>
       <br>
       <b>Fecha:</b>
       <%= Time.at(experiencia.created_at).to_date %>
       <br>
       <br>
       <b>Autor:</b>
       <%=Person.find_by(id: experiencia.person_id).nombre %>
       <br>
       <br>
       <b>Relato:</b>
       <%= experiencia.comentario %>
       <br>
       <br>
     </div>
     <div class="modal-footer">
      <button type="button" class="btn btn-primary" data-dismiss="modal">Cerrar</button>
    </div>
  </div>

</div>
</div>
<% end %>

