<link rel="stylesheet" type="text/css" href="css/login.css"/>
<%= form_tag '/entrar', class: 'login' do %>
	<h1 class="login-title">Ingresar</h1>

	<input type="text" class="login-input" placeholder="Nombre de usuario" name="correo" id="correo" autofocus />
	<input type="password" class="login-input" placeholder="Contraseña" name="clave" id="clave"/>
	<input type="submit" value="Entrar" class="login-button"/>
	<p class="login-lost"><a href="">¿Olvidó su contraseña?</a></p>
        <p class="login-lost"><a href="#/registro">Registrarse</a></p>
<% end %>
<div class="footer">
  <div class="container">
    <p><span class="glyphicon glyphicon-heart"></span> Cortemos el cabello, no las esperanzas.</p>
  </div>
</div>