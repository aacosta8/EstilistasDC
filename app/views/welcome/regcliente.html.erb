<link rel="stylesheet" type="text/css" href="../css/welcome/contact.css">
<%= form_tag '/regclientes', class: 'form-style-9' do %>

<ul>
  <label for="Cedula">Cédula</label>
  <li>
    <input type="text" id="cedula" name="cedula" class="field-style field-full align-none" placeholder="Introduce tu número de identificación" />
  </li>
  <label for="Nombre">Nombre</label>
  <li>
    <input type="text" id="nombre" name="nombre" class="field-style field-full align-none" placeholder="Introduce tu nombre" required/>
  </li>
  <label for="Apellido">Apellido</label>
  <li>
    <input type="text" id="apellido" name="apellido" class="field-style field-full align-none" placeholder="Introduce tu apellido" />
  </li>
  <label for="Tipo">Tipo de discapacidad</label>
  <li>
    <select id="tipo" name="tipo" class="field-style field-full align-none">
      <option value=""></option>
      <option value="Fisica">Física</option>
      <option value="Psicosocial">Psicosocial</option>
      <option value="Cognitiva">Cognitiva</option>
      <option value="Sensorial">Sensorial</option>
    </select>
  </li>
  <label for="Nacimiento">Fecha de nacimiento</label>
  <li>
    <input type="date" id="nacimiento" name="nacimiento" class="field-style field-full align-none" placeholder="Selecciona tu fecha de nacimiento" />
  </li>
  <label for="Fijo">Teléfono fijo</label>
  <li>
    <input type="text" id="fijo" name="fijo" class="field-style field-full align-none" placeholder="Introduce tu número fijo" />
  </li>
  <label for="Movil">Teléfono móvil</label>
  <li>
    <input type="text" id="movil" name="movil" class="field-style field-full align-none" placeholder="Introduce tu número móvil" />
  </li>
  <li>
    <br>
    <div align="center"><button type="submit" class="btn btn-primary">Enviar</button></div>
  </li>
</ul>
<% end %>
